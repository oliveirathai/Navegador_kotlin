<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_url" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn_ir"/>
    <Button
            android:text="IR"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:id="@+id/btn_ir"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <ImageView
            android:layout_width="23dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="23dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <WebView
            android:layout_width="395dp"
            android:layout_height="672dp"
            android:id="@+id/webUniverse" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_url"/>
</android.support.constraint.ConstraintLayout>